<Window x:Class="Hook.View.AutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Hook.View"
        mc:Ignorable="d"
        Title="Авторизация"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0F1C">

    <Window.Resources>
        <Style x:Key="HoverTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2A2A40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF66B2FF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF0080FF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrangeButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Background" Value="#FFFF6600"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFF8533"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFCC5200"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Background" Value="#FF0080FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF33A0FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0066CC"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="100 0">
        <Border BorderBrush="#FF0080FF" BorderThickness="4" Background="#FF1A1F2E">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Новая строка для иконки -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0" Background="#FF0066CC" Padding="15">
                    <TextBlock Text="Добро пожаловать" 
                              FontSize="24" 
                              Foreground="White" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </Border>

                <!-- ИКОНКА ПОЛЬЗОВАТЕЛЯ - ВСТАВЛЕНА ЗДЕСЬ -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0 20 0 10">
                    <materialDesign:PackIcon 
                        Kind="AccountCircle" 
                        Foreground="#FF66B2FF" 
                        Width="80" 
                        Height="80"
                        HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Поле логина -->
                <StackPanel Grid.Row="2" Margin="60 10 60 10" VerticalAlignment="Center">
                    <TextBlock Text="Логин" 
                              FontSize="16" 
                              Foreground="#FF66B2FF" 
                              FontWeight="SemiBold"
                              Margin="0 0 0 8"/>
                    <TextBox x:Name="Log"
                            Style="{StaticResource HoverTextBoxStyle}">
                        <TextBox.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#400066CC"/>
                        </TextBox.Effect>
                    </TextBox>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Grid.Row="3" Margin="60 10 60 10" VerticalAlignment="Center">
                    <TextBlock Text="Пароль" 
                              FontSize="16" 
                              Foreground="#FF66B2FF" 
                              FontWeight="SemiBold"
                              Margin="0 0 0 8"/>
                    <PasswordBox x:Name="pas"
                                FontSize="18"
                                Background="#FF2A2A40"
                                Foreground="White"
                                BorderBrush="#FF444444"
                                BorderThickness="2"
                                Height="45"
                                Padding="10">
                        <PasswordBox.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#400066CC"/>
                        </PasswordBox.Effect>
                    </PasswordBox>
                </StackPanel>

                <!-- Кнопки -->
                <Grid Grid.Row="4" Margin="60 10 60 30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Content="Регистрация"
                           Margin="20,20,10,20"
                           Grid.Column="0"
                           Click="Button_Click"
                           Style="{StaticResource OrangeButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" BlurRadius="10" Color="#40FF6600"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="Вход"
                           Margin="10,20,20,20"
                           Grid.Column="1"
                           Click="Button_Click_1"
                           Style="{StaticResource BlueButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" BlurRadius="10" Color="#400080FF"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>