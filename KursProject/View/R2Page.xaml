<Page x:Class="Sample.View.R2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Sample.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Аналитика уловов по катерам"
      Background="#FFF5F7FA">

    <Page.Resources>
        <Style x:Key="ModernCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#1A000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF38A169"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF48BB78"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2F855A"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF38A169" Padding="20" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="ChartLine" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Аналитика уловов по катерам" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" Background="#FFEDF2F7" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Дата От -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon 
                        Kind="CalendarArrowRight" 
                        Foreground="#FF38A169" 
                        Width="24" 
                        Height="24"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"/>
                    <DatePicker Style="{StaticResource ModernDatePickerStyle}"
                                materialDesign:HintAssist.Hint="Начальная дата"
                                SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                x:Name="FromDate"
                                Width="200">
                        <DatePicker.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#1A38A169"/>
                        </DatePicker.Effect>
                    </DatePicker>
                </StackPanel>

                <!-- Дата До -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon 
                        Kind="CalendarArrowLeft" 
                        Foreground="#FF38A169" 
                        Width="24" 
                        Height="24"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"/>
                    <DatePicker Style="{StaticResource ModernDatePickerStyle}"
                                materialDesign:HintAssist.Hint="Конечная дата"
                                SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                x:Name="ToDate"
                                Width="200">
                        <DatePicker.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#1A38A169"/>
                        </DatePicker.Effect>
                    </DatePicker>
                </StackPanel>

                <!-- Кнопка поиска -->
                <Button Content="Найти"
                        Style="{StaticResource AccentButtonStyle}"
                        Command="{Binding FitreCommand}"
                        Grid.Column="2"
                        MinWidth="120">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Magnify" 
                                    Foreground="White" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Найти" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#2038A169"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>

        <!-- Список результатов -->
        <ListBox x:Name="Req2List" 
                 Grid.Row="2" 
                 Margin="30,10" 
                 ItemsSource="{Binding FilteredBoats}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <!-- Название катера -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon 
                                    Kind="SailBoat" 
                                    Foreground="#FF38A169" 
                                    Width="24" 
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#FF2D3748"
                                           Text="{Binding StringFormat='{}Катер: {0}', Path=Name}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Наибольший улов -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="WeightKilogram" 
                                    Foreground="#FF718096" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Наибольший улов: {0} кг', Path=Maxcatch}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Сорт рыбы -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="Fish" 
                                    Foreground="#FF718096" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Сорт рыбы: {0}', Path=Type}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Разделитель -->
                            <Rectangle Height="1" 
                                      Fill="#FFE2E8F0" 
                                      Margin="0,8,0,0"
                                      Opacity="0.5"/>
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>