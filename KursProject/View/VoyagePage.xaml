<Page x:Class="Sample.View.BankPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Sample.View"
      xmlns:convert="clr-namespace:Sample.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Управление рейсами"
      Background="#FFF5F7FA">

    <Page.Resources>
        <convert:BoatIdToBoatName x:Key="fromIdToName"/>
        <convert:FromVoyageIdToCaptain x:Key="fromIdtoCaptain"/>

        <Style x:Key="ModernCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#1A000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF38A169"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF718096"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF38A169" Padding="20" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="SailBoat" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Управление рейсами" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Список рейсов -->
        <ListBox x:Name="VoyageList" 
                 Grid.Row="1" 
                 ItemsSource="{Binding Voyages}"
                 SelectedItem="{Binding selectedVoyage}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Padding="20">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick" 
                                              Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" 
                                              CommandParameter="{Binding}"/>
                            </StackPanel.InputBindings>

                            <!-- Катер -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon 
                                    Kind="Ferry" 
                                    Foreground="#FF38A169" 
                                    Width="24" 
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#FF2D3748"
                                           Text="{Binding StringFormat='{}Катер: {0}', Path=BoatId, Converter={StaticResource fromIdToName}}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Период рейса -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="CalendarRange" 
                                    Foreground="#FF718096" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Рейс: {0:dd.MM.yyyy} - {1:dd.MM.yyyy}', Path=DepartureDate}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Капитан -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="AccountTie" 
                                    Foreground="#FF718096" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Капитан: {0}', Path=CaptainName}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Добавить рейс"
                        Style="{StaticResource AccentButtonStyle}"
                        Command="{Binding AddVoyageCommand}"
                        Grid.Column="0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Plus" 
                                    Foreground="White" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Добавить рейс" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Удалить выбранный"
                        Style="{StaticResource SecondaryButtonStyle}"
                        CommandParameter="{Binding ElementName=VoyageList, Path=SelectedItem}"
                        Command="{Binding DeleteCommand}"
                        Grid.Column="1">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Delete" 
                                    Foreground="White" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Удалить выбранный" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>