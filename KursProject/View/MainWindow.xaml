<Window x:Class="Hook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Hook"
        mc:Ignorable="d"
        Title="Главное меню" Height="520" Width="920"
        Background="#FF0A0F1C">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Две колонки с кнопками рядом -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Левая колонка - яркая синяя тема -->
            <Border Grid.Column="0" Background="#FF0066CC" Margin="0,0,6,0">
                <StackPanel>
                    <Border Background="#FF004C99" Padding="12">
                        <TextBlock Text="Разделы" FontSize="16" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <Button Content="Рейсы" Command="{Binding AddCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Катеры" Command="{Binding BoatCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Уловы" Command="{Binding CatchCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Fishing Spots" Command="{Binding SpotCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Посещения" Command="{Binding VisitCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Банки" Command="{Binding SpotCommand}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FF0080FF" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Правая колонка - яркая оранжевая тема -->
            <Border Grid.Column="1" Background="#FFFF6600" Margin="6,0,0,0">
                <StackPanel>
                    <Border Background="#FFCC5200" Padding="12">
                        <TextBlock Text="Запросы" FontSize="16" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <Button Content="Запрос 1" Command="{Binding R1Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Запрос 2" Command="{Binding R2Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Запрос 3" Command="{Binding R3Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Запрос 4" Command="{Binding R4Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Запрос 5" Command="{Binding R5Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                    <Button Content="Запрос 6" Command="{Binding R6Command}" Margin="8,6" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#FFFF8533" Foreground="White" BorderThickness="0" Height="40" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Центральная часть -->
        <Border Grid.Column="1" Margin="12,0,0,0" Background="#FF1A1F2E" BorderThickness="2" BorderBrush="#FF333755">
            <Frame Name="PageContainer" Background="Transparent" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>