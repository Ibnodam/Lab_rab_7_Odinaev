<Page x:Class="Sample.View.Addvisit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:convert="clr-namespace:Sample.Converters"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Sample.View"
      xmlns:validation="clr-namespace:Sample.Validation"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Добавление посещения"
      Background="#FFF5F7FA">

    <Page.Resources>
        <validation:NameValidationRule x:Key="namevalidation"/>
        <validation:NotEmpty x:Key="notEmptyValidation"/>
        <validation:OnlyDigitsValidationRule x:Key="onlyDigitsValidation"/>
        <validation:SelectionValidationRule x:Key="SelectValidate"/>
        <validation:DateValidationRule x:Key="DateValidation"/>

        <!-- ИСПРАВЛЕННЫЙ ШАБЛОН ОШИБКИ -->
        <ControlTemplate x:Key="ModernErrorTemplate">
            <DockPanel>
                <Border BorderBrush="#FFE53E3E" BorderThickness="2" CornerRadius="4">
                    <AdornedElementPlaceholder/>
                </Border>
                <materialDesign:PackIcon 
                    Kind="AlertCircle" 
                    Foreground="#FFE53E3E" 
                    Width="16" 
                    Height="16"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="ModernComboBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Setter Property="materialDesign:HintAssist.Hint" Value="Дата"/>
            <Setter Property="SelectedDateFormat" Value="Long"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF3182CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2B6CB0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF3182CE" Padding="20" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="CalendarCheck" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Добавление посещения" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основные поля ввода -->
        <StackPanel Grid.Row="1" Margin="40,0">
            <ComboBox x:Name="NameBank"
                      Style="{StaticResource ModernComboBoxStyle}"
                      materialDesign:HintAssist.Hint="Название банки"
                      DisplayMemberPath="SpotName" 
                      SelectedValuePath="SpotId" 
                      SelectedValue="{Binding SpotId}"
                      ItemsSource="{Binding NSpots}"
                      Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"/>

            <ComboBox x:Name="IdVoyage"
                      Style="{StaticResource ModernComboBoxStyle}"
                      materialDesign:HintAssist.Hint="Улов с капитаном"
                      DisplayMemberPath="CaptainName" 
                      SelectedValuePath="VoyageId" 
                      SelectedValue="{Binding VoyageId}"
                      Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"/>

            <DatePicker x:Name="returnDateDB"
                        Style="{StaticResource ModernDatePickerStyle}"
                        materialDesign:HintAssist.Hint="Дата выезда"
                        SelectedDate="{Binding DepartureDate}"
                        Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"/>

            <DatePicker x:Name="deptDateDB"
                        Style="{StaticResource ModernDatePickerStyle}"
                        materialDesign:HintAssist.Hint="Дата возвращения"
                        SelectedDate="{Binding ArrivalDate}"
                        Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"/>

            <TextBox x:Name="ValueCatch"
                     Style="{StaticResource ModernTextBoxStyle}"
                     materialDesign:HintAssist.Hint="Качество улова"
                     Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}">
                <TextBox.Text>
                    <Binding Path="CatchQuality" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NameValidationRule ValidatesOnTargetUpdated="True"/>
                            <validation:NotEmpty ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>

        <!-- Кнопка добавления -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="15" Margin="0,20,0,0">
            <Button Content="Добавить посещение" 
                    Click="Button_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    MinWidth="220">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#203182CE"/>
                </Button.Effect>
            </Button>
        </Border>
    </Grid>
</Page>