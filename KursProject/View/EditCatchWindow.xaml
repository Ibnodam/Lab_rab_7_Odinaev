<Window x:Class="Sample.View.EditCatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:convert="clr-namespace:Sample.Converters"
        xmlns:local="clr-namespace:Sample.View"
        mc:Ignorable="d"
        Title="Редактирование улова" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA">

    <Window.Resources>
        <convert:FromVisitIdToDepDate x:Key="fromIdToDate"/>

        <Style x:Key="ModernTextBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF48BB78"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF38A169"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF38A169"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF48BB78"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2F855A"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF4A5568"/>
            <Setter Property="BorderBrush" Value="#FFCBD5E0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEDF2F7"/>
                    <Setter Property="Foreground" Value="#FF2D3748"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFE2E8F0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF38A169" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Fish" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Редактирование улова" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" Margin="40,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Calendar" 
                    Foreground="#FF38A169" 
                    Width="24" 
                    Height="24"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Дата выхода на улов"
                         Text="{Binding VisitId, Converter={StaticResource fromIdToDate}}"
                         IsReadOnly="True"
                         Foreground="#FF718096">
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A38A169"/>
                    </TextBox.Effect>
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Fish" 
                    Foreground="#FF38A169" 
                    Width="24" 
                    Height="24"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Тип рыбы"
                         Text="{Binding FishType}">
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A38A169"/>
                    </TextBox.Effect>
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="WeightKilogram" 
                    Foreground="#FF38A169" 
                    Width="24" 
                    Height="24"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         materialDesign:HintAssist.Hint="Вес улова (кг)"
                         Text="{Binding CatchWeight}">
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A38A169"/>
                    </TextBox.Effect>
                </TextBox>
            </StackPanel>
        </StackPanel>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Отмена"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Button_Click_1"
                        Grid.Column="0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Close" 
                                    Foreground="#FF4A5568" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Отмена" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Сохранить"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsDefault="True"
                        Click="Button_Click"
                        Grid.Column="1">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Check" 
                                    Foreground="White" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Сохранить" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#2038A169"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>