<Window x:Class="Sample.View.EditBoatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Sample.View"
        mc:Ignorable="d"
        Title="Редактирование катера" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA">

    <Window.Resources>
        <Style x:Key="ModernTextBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,8"/>
            <Setter Property="materialDesign:HintAssist.Hint" Value="Дата постройки катера"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF3182CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2B6CB0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF4A5568"/>
            <Setter Property="BorderBrush" Value="#FFCBD5E0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEDF2F7"/>
                    <Setter Property="Foreground" Value="#FF2D3748"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFE2E8F0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF3182CE" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Ferry" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Редактирование катера" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" Margin="40,20">
            <TextBox Style="{StaticResource ModernTextBoxStyle}"
                     materialDesign:HintAssist.Hint="Название катера"
                     Text="{Binding BoatName}">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A3182CE"/>
                </TextBox.Effect>
            </TextBox>

            <TextBox Style="{StaticResource ModernTextBoxStyle}"
                     materialDesign:HintAssist.Hint="Тип катера"
                     Text="{Binding BoatType}">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A3182CE"/>
                </TextBox.Effect>
            </TextBox>

            <TextBox Style="{StaticResource ModernTextBoxStyle}"
                     materialDesign:HintAssist.Hint="Водоизмещение катера (т)"
                     Text="{Binding Displacement}">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A3182CE"/>
                </TextBox.Effect>
            </TextBox>

            <DatePicker Style="{StaticResource ModernDatePickerStyle}"
                        SelectedDate="{Binding BuildDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                <DatePicker.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#1A3182CE"/>
                </DatePicker.Effect>
            </DatePicker>
        </StackPanel>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Отменить"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Button_Click_1"
                        Grid.Column="0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Close" 
                                    Foreground="#FF4A5568" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Отменить" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Сохранить"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsDefault="True"
                        Click="Button_Click"
                        Grid.Column="1">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon 
                                    Kind="Check" 
                                    Foreground="White" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock Text="Сохранить" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#203182CE"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>