<Page x:Class="Sample.View.AddCatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sample.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:convert="clr-namespace:Sample.Converters"
      xmlns:validation="clr-namespace:Sample.Validation"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Добавление улова"
      Background="#FFF5F7FA">

    <Page.Resources>
        <convert:FromVisitIdToDepDate x:Key="fromIdToDate"/>
        <validation:NameValidationRule x:Key="nameValidation" />
        <validation:OnlyDigitsValidationRule x:Key="onlyDigitsValidation"/>
        <validation:NotEmpty x:Key="nameEmpty"/>
        <validation:SelectionValidationRule x:Key="SelectValidate"/>
        <validation:ComboboxValidationRule x:Key="ComboboxValidate"/>
        <validation:SelectionValidationStringRule x:Key="SelectValidString"/>

        <!-- ИСПРАВЛЕННЫЙ ШАБЛОН ОШИБКИ -->
        <ControlTemplate x:Key="ModernErrorTemplate">
            <DockPanel>
                <Border BorderBrush="#FFE53E3E" BorderThickness="2" CornerRadius="4">
                    <AdornedElementPlaceholder/>
                </Border>
                <materialDesign:PackIcon 
                    Kind="AlertCircle" 
                    Foreground="#FFE53E3E" 
                    Width="16" 
                    Height="16"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="ModernComboBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,10"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="20,10"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF38A169"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF48BB78"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2F855A"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF38A169" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="Fish" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Добавление нового улова" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основные поля ввода -->
        <StackPanel Grid.Row="1" Margin="40,0">
            <ComboBox x:Name="VisitIdCB"
                      Style="{StaticResource ModernComboBoxStyle}"
                      materialDesign:HintAssist.Hint="Дата выхода на улов"
                      DisplayMemberPath="DepartureDate"
                      SelectedValuePath="VisitId" 
                      SelectedValue="{Binding VisitId}"
                      Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"/>

            <ComboBox x:Name="typefish"
                      Style="{StaticResource ModernComboBoxStyle}"
                      materialDesign:HintAssist.Hint="Тип рыбы"
                      Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}">
                <ComboBox.SelectedItem>
                    <Binding Path="FishType" UpdateSourceTrigger="PropertyChanged"/>
                </ComboBox.SelectedItem>
            </ComboBox>

            <TextBox x:Name="WeightCatch"
                     Style="{StaticResource ModernTextBoxStyle}"
                     materialDesign:HintAssist.Hint="Вес улова (кг)"
                     Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}">
                <TextBox.Text>
                    <Binding Path="CatchWeight" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:OnlyDigitsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>

        <!-- Кнопка добавления -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="15" Margin="0,20,0,0">
            <Button Content="Добавить улов" 
                    Command="{Binding AddBoatCom}" 
                    Click="Button_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    MinWidth="200">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="10" Color="#2038A169"/>
                </Button.Effect>
            </Button>
        </Border>
    </Grid>
</Page>