<Page x:Class="Sample.View.R1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Sample.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Статистика рейсов по качеству улова"
      Background="#FFF5F7FA">

    <Page.Resources>
        <Style x:Key="ModernCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#1A000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF3182CE" Padding="20" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="ChartBar" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Статистика рейсов по качеству улова" 
                          FontSize="22" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Список результатов -->
        <ListBox x:Name="Req1List" 
                 Grid.Row="1" 
                 Margin="30,20" 
                 ItemsSource="{Binding Request1}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <!-- Название катера -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon 
                                    Kind="SailBoat" 
                                    Foreground="#FF3182CE" 
                                    Width="24" 
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#FF2D3748"
                                           Text="{Binding StringFormat='{}Катер: {0}', Path=Boatname}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Дата выхода на улов -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="Calendar" 
                                    Foreground="#FF718096" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Дата выхода: {0:dd.MM.yyyy}', Path=DepDate}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Качество улова -->
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon 
                                    Kind="Star" 
                                    Foreground="#FFD69E2E" 
                                    Width="20" 
                                    Height="20"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <TextBlock FontSize="14" 
                                           Foreground="#FF4A5568"
                                           Text="{Binding StringFormat='{}Качество улова: {0}', Path=CatchQuality}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Разделитель -->
                            <Rectangle Height="1" 
                                      Fill="#FFE2E8F0" 
                                      Margin="0,8,0,0"
                                      Opacity="0.5"/>
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>