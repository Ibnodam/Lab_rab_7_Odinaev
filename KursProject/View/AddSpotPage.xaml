<Page x:Class="Sample.View.AddSpotPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Sample.View"
      xmlns:validation="clr-namespace:Sample.Validation"
      mc:Ignorable="d" 
      Title="Добавление банки"
      Height="400" Width="700"
      Background="#FFF5F7FA">

    <Page.Resources>
        <validation:NameValidationRule x:Key="namevalidation"/>

        <!-- ИСПРАВЛЕННЫЙ ШАБЛОН ОШИБКИ -->
        <ControlTemplate x:Key="ModernErrorTemplate">
            <DockPanel>
                <Border BorderBrush="#FFE53E3E" BorderThickness="2" CornerRadius="4">
                    <AdornedElementPlaceholder/>
                </Border>
                <materialDesign:PackIcon 
                    Kind="AlertCircle" 
                    Foreground="#FFE53E3E" 
                    Width="16" 
                    Height="16"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="ModernTextBoxStyle" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF2D3748"/>
            <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="50,20"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="#FFE53E3E"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4299E1"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF3182CE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButtonStyle" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
            <Setter Property="Background" Value="#FFDD6B20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="50,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFED8936"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFC05621"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FFDD6B20" Padding="25" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="MapMarker" 
                    Foreground="White" 
                    Width="32" 
                    Height="32"
                    Margin="0,0,15,0"/>
                <TextBlock Text="Добавление новой банки" 
                          FontSize="24" 
                          Foreground="White" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Поле ввода -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBox 
                Validation.ErrorTemplate="{StaticResource ModernErrorTemplate}"
                materialDesign:HintAssist.Hint="Название банки"  
                Style="{StaticResource ModernTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="SpotName" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NameValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#20DD6B20"/>
                </TextBox.Effect>
            </TextBox>
        </StackPanel>

        <!-- Кнопка добавления -->
        <Border Grid.Row="2" Background="#FFEDF2F7" Padding="20" Margin="0,30,0,0">
            <Button Content="Добавить банку" 
                    Click="Button_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    MinWidth="200">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="15" Color="#20DD6B20"/>
                </Button.Effect>
            </Button>
        </Border>
    </Grid>
</Page>